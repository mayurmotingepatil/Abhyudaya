<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditUserInfoActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Edit Information"
        android:textColor="@color/white"
        android:background="@color/black_cream"
        android:textStyle="bold"
        android:textSize="25sp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingHorizontal="18dp">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:backgroundTint="@color/cream"
            android:hint="Name"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/transp_white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etMobNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:backgroundTint="@color/cream"
            android:hint="Mobile No."
            android:inputType="phone"
            android:textColor="@color/white"
            android:textColorHint="@color/transp_white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:backgroundTint="@color/cream"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="@color/transp_white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etAadhar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:backgroundTint="@color/cream"
            android:hint="Aadhar No."
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/transp_white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etHouseNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:backgroundTint="@color/cream"
            android:hint="House No."
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/transp_white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etPrevAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:backgroundTint="@color/cream"
            android:hint="Previous Address"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/transp_white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:backgroundTint="@color/cream"
            android:hint="Create Username"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/transp_white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:backgroundTint="@color/cream"
            android:hint="Create Password"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/transp_white"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/cbShowPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginVertical="8dp"
            android:buttonTint="@color/white"
            android:text="Shhow Password"
            android:textColor="@color/white" />

        <RadioGroup
            android:id="@+id/rgUserRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp">

            <RadioButton
                android:id="@+id/rbResidentAddPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:checked="true"
                android:text="Resident"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rbOfficerAddPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:text="Officer"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:background="@drawable/btn_shape_cream"
            android:paddingHorizontal="20dp"
            android:text="Continue"
            android:textColor="@color/black"
            android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>