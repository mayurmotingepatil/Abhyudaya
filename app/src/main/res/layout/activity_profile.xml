<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:id="@+id/rlTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvHouseNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="House No."
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>



    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfilePhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="51dp"
        android:background="@color/black"
        android:layout_margin="8dp"
        android:layout_below="@id/rlTitleBar"
        app:cardBackgroundColor="@color/white">

        <ImageView
            android:id="@+id/ivProfilePhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_profile"
            app:tint="@color/black" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/cvProfilePhoto"
        android:layout_below="@id/rlTitleBar"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="example@email.com"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_marginHorizontal="8dp"
        android:layout_toRightOf="@id/cvProfilePhoto"
        android:layout_below="@id/tvName"/>

    <TextView
        android:id="@+id/tvMob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 ##### #####"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_marginHorizontal="8dp"
        android:layout_toRightOf="@id/cvProfilePhoto"
        android:layout_below="@id/tvEmail"/>

    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/white"
        android:drawableRight="@drawable/icon_logout"
        android:drawableTint="@color/white"
        android:textSize="18dp"
        android:layout_margin="8dp"
        android:drawablePadding="5dp"
        android:layout_below="@id/cvProfilePhoto"
        android:layout_alignParentRight="true"/>

</RelativeLayout>