<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <TextView
        android:id="@+id/tvPageMessage"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="18dp"
        android:gravity="center_vertical"
        android:text="Hello"
        android:textColor="@color/white"
        android:background="@color/black_cream"
        android:textStyle="bold"
        android:textSize="25sp"/>


    <androidx.appcompat.widget.SearchView
        android:id="@+id/etSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_search"
        app:queryHint="Click to Search"
        app:iconifiedByDefault="false"
        android:theme="@style/Theme.AbhyudayaWithWhiteText"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@id/tvPageMessage"/>

    <androidx.cardview.widget.CardView
        android:layout_width="35dp"
        android:layout_height="36dp"
        app:cardCornerRadius="18dp"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="15dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/black">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_profile"/>

    </androidx.cardview.widget.CardView>



    <FrameLayout
        android:id="@+id/flOnHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/etSearchBar"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_manu_home"
        android:theme="@style/Theme.AbhyudayaWithBlackText"
        android:background="@drawable/bottom_menu_shape" />

</RelativeLayout>