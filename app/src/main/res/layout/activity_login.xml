<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/cream">

    <LinearLayout
        android:id="@+id/cardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_entry_card"
        android:gravity="center"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:id="@+id/llLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="40dp">

            <ImageView
                android:id="@+id/ivLoginLogo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/app_icon_logo_cream"/>
             <TextView
                 android:id="@+id/tvLoginTitle"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Abhyudaya"
                 android:textColor="@color/cream"
                 android:textSize="40sp"
                 android:fontFamily="@font/samarkan"
                 android:layout_marginRight="15dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardTitle"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Enter Username"
            android:textColorHint="@color/transp_black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:backgroundTint="@color/black_cream"
            android:paddingLeft="15sp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Enter Password"
            android:textColorHint="@color/transp_black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:backgroundTint="@color/black_cream"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="15sp"
            android:inputType="text"/>

        <CheckBox
            android:id="@+id/cbShowPassword"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Show Password"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:buttonTint="@color/black"
            android:layout_gravity="right"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="25dp"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tvNewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register as Admin"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ivSIWithGoogle"
            android:text="OR"
            android:textColor="@color/mid_black_cream"
            android:textSize="15sp"
            android:layout_margin="15dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/ivSIWithGoogle"
            android:layout_width="210dp"
            android:layout_height="48dp"
            android:src="@drawable/google_icon_light"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>